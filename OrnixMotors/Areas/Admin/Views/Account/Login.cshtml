@model OrnixMotors.Areas.Admin.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "تسجيل الدخول";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ornix Motors</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin-style.css" />
    <link href="~/imges/logo.png" rel="icon" type="image/x-icon" />
</head>
<body class="login-page-body">
    <div class="login-container">
        <div class="login-box">
            <div class="login-logo">
                <img src="~/imges/logo.png" alt="Ornex Motors Icon">
                <h2>Ornix<span>Motors</span></h2>
                <p>مرحباً بك في لوحة التحكم</p>
            </div>
            <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group-checkbox">
                    <label class="checkbox-container">
                        @Html.DisplayNameFor(m => m.RememberMe)
                        <input asp-for="RememberMe" />
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">تسجيل الدخول</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
