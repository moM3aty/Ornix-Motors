                <i class="fas fa-calendar-alt"></i>
                <h3 class="counter" data-target="6">0</h3>
                <p>سنوات من الخبرة</p>
            </div>
            <div class="stat-card animate-on-scroll">
                <i class="fas fa-user-shield"></i>
                <h3 class="counter" data-target="25">0</h3>
                <p>سائق محترف</p>
            </div>
        </div>
    </div>
</section>

<!-- Dynamic Achievements Section -->
@if (achievements != null && achievements.Any())
{
    <section id="achievements-dynamic" class="section-padding">
        <div class="container">
            <div class="section-title">
                <span class="subtitle">Our Achievements</span>
                <h2>إنجازاتنا</h2>
                <p>نفخر بما حققناه من نجاحات وثقة عملائنا.</p>
            </div>
            <div class="achievements-container">
                @{
                    var i = 0;
                }
                @foreach (var achievement in achievements)
                {
                    <div class="achievement-row animate-on-scroll @(i % 2 != 0 ? "reverse" : "")">
                        <div class="achievement-image">
                            <img src="~/images/achievements/@achievement.ImageUrl" alt="@achievement.Description" />
                        </div>
                        <div class="achievement-content">
                            <h3>@achievement.Description</h3>
                            <!-- You can add more text here if needed -->
                        </div>
                    </div>
                    i++;
                }
            </div>
        </div>
    </section>
}


<!-- Contact Section -->
<section id="contact" class="section-padding">
    <div class="container text-center">
        <div class="section-title">
            <span class="subtitle">Book Your Ride</span>
            <h2>احجز رحلتك الفاخرة الآن</h2>
        </div>
        <p>فريقنا جاهز لتنسيق كافة تفاصيل رحلتك. تواصل معنا عبر الهاتف أو واتساب للحجز والاستفسار.</p>
        <div class="contact-buttons">
            <a href="tel:@settings.PhoneNumber1" class="btn cta-button">
                <i class="fas fa-phone-alt"></i>
                <div><span>اتصل بنا</span><strong>@settings.PhoneNumber1</strong></div>
            </a>
            <a href="https://wa.me/@settings.WhatsAppNumber" target="_blank" class="btn cta-button">
                <i class="fab fa-whatsapp"></i>
                <div><span>واتساب</span><strong>@settings.PhoneNumber2</strong></div>
            </a>
        </div>
    </div>
</section>

